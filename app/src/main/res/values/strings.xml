    <string name="fallacy_ad_hominem_name">Ad hominem</string>
    <string name="fallacy_ad_hominem_description">Attacking the person rather than the idea.</string>
    <string name="fallacy_ad_hominem_example">You are wrong because you never studied economics.</string>
    <string name="fallacy_appeal_authority_name">Appeal to authority</string>
    <string name="fallacy_appeal_authority_description">Using authority as proof without evidence.</string>
    <string name="fallacy_appeal_authority_example">A celebrity said it, so it must be true.</string>
    <string name="fallacy_appeal_popularity_name">Appeal to popularity</string>
    <string name="fallacy_appeal_popularity_description">Claiming something is true because many believe it.</string>
    <string name="fallacy_appeal_popularity_example">Everyone is investing, so it is safe.</string>
    <string name="fallacy_appeal_emotion_name">Appeal to emotion</string>
    <string name="fallacy_appeal_emotion_description">Manipulating emotions instead of facts.</string>
    <string name="fallacy_appeal_emotion_example">Think of the children, so approve this law.</string>
    <string name="fallacy_straw_man_name">Straw man</string>
    <string name="fallacy_straw_man_description">Distorting an argument to make it easier to attack.</string>
    <string name="fallacy_straw_man_example">You want cleaner energy, so you plan to shut down all factories.</string>
    <string name="fallacy_slippery_slope_name">Slippery slope</string>
    <string name="fallacy_slippery_slope_description">Assuming one action will lead to a chain of extreme events.</string>
    <string name="fallacy_slippery_slope_example">If we allow bikes downtown, cars will be banned next.</string>
    <string name="fallacy_false_dilemma_name">False dilemma</string>
    <string name="fallacy_false_dilemma_description">Presenting only two options when more exist.</string>
    <string name="fallacy_false_dilemma_example">You are with us or against us.</string>
    <string name="fallacy_circular_reasoning_name">Circular reasoning</string>
    <string name="fallacy_circular_reasoning_description">The conclusion is restated as the premise.</string>
    <string name="fallacy_circular_reasoning_example">He is trustworthy because he never lies.</string>
    <string name="fallacy_hasty_generalization_name">Hasty generalization</string>
    <string name="fallacy_hasty_generalization_description">Drawing a conclusion from too little data.</string>
    <string name="fallacy_hasty_generalization_example">Two teens were loud, so all teens are noisy.</string>
    <string name="fallacy_red_herring_name">Red herring</string>
    <string name="fallacy_red_herring_description">Introducing unrelated information to distract.</string>
    <string name="fallacy_red_herring_example">Why worry about pollution when unemployment exists?</string>
    <string name="fallacy_post_hoc_name">Post hoc</string>
    <string name="fallacy_post_hoc_description">Assuming causation because one event followed another.</string>
    <string name="fallacy_post_hoc_example">I wore a bracelet and then passed the exam; the bracelet caused it.</string>
    <string name="fallacy_false_cause_name">False cause</string>
    <string name="fallacy_false_cause_description">Attributing cause without proof.</string>
    <string name="fallacy_false_cause_example">Crime rose after the new mayor, so the mayor caused crime.</string>
    <string name="fallacy_appeal_ignorance_name">Appeal to ignorance</string>
    <string name="fallacy_appeal_ignorance_description">Claiming something is true because it was not disproven.</string>
    <string name="fallacy_appeal_ignorance_example">No one proved aliens do not exist, so they do.</string>
    <string name="fallacy_cherry_picking_name">Cherry picking</string>
    <string name="fallacy_cherry_picking_description">Selecting data that confirms a position.</string>
    <string name="fallacy_cherry_picking_example">Citing only warm days to deny climate change.</string>
    <string name="fallacy_equivocation_name">Equivocation</string>
    <string name="fallacy_equivocation_description">Using ambiguous language to mislead.</string>
    <string name="fallacy_equivocation_example">Laws imply legal, so breaking the law is impossible.</string>
    <string name="fallacy_false_analogy_name">False analogy</string>
    <string name="fallacy_false_analogy_description">Comparing things that are not truly similar.</string>
    <string name="fallacy_false_analogy_example">Employees are nails; both must be hit to work.</string>
    <string name="fallacy_no_true_scotsman_name">No true Scotsman</string>
    <string name="fallacy_no_true_scotsman_description">Redefining a group to dismiss counterexamples.</string>
    <string name="fallacy_no_true_scotsman_example">No real gamer dislikes this title.</string>
    <string name="fallacy_gamblers_name">Gambler's fallacy</string>
    <string name="fallacy_gamblers_description">Believing past events change probabilities.</string>
    <string name="fallacy_gamblers_example">The coin landed heads five times, so tails is due.</string>
    <string name="fallacy_tu_quoque_name">Tu quoque</string>
    <string name="fallacy_tu_quoque_description">Dismissing criticism by pointing out hypocrisy.</string>
    <string name="fallacy_tu_quoque_example">You can't advise on health; you once ate fast food.</string>
    <string name="fallacy_appeal_tradition_name">Appeal to tradition</string>
    <string name="fallacy_appeal_tradition_description">Claiming something is correct because it has always been done.</string>
    <string name="fallacy_appeal_tradition_example">We must keep paper forms because that's tradition.</string>
    <string name="fallacy_appeal_nature_name">Appeal to nature</string>
    <string name="fallacy_appeal_nature_description">Assuming natural things are better.</string>
    <string name="fallacy_appeal_nature_example">Natural remedies are always safer.</string>
    <string name="fallacy_middle_ground_name">Middle ground</string>
    <string name="fallacy_middle_ground_description">Assuming the compromise between two extremes is true.</string>
    <string name="fallacy_middle_ground_example">Halfway between truth and lie must be correct.</string>
    <string name="fallacy_loaded_question_name">Loaded question</string>
    <string name="fallacy_loaded_question_description">Asking a question with a presupposition.</string>
    <string name="fallacy_loaded_question_example">When did you stop wasting resources?</string>
    <string name="fallacy_composition_name">Composition</string>
    <string name="fallacy_composition_description">Assuming what is true of parts is true of the whole.</string>
    <string name="fallacy_composition_example">Every component is light, so the machine is light.</string>
    <string name="fallacy_division_name">Division</string>
    <string name="fallacy_division_description">Assuming what is true of the whole applies to parts.</string>
    <string name="fallacy_division_example">The company is rich, so each employee is rich.</string>
    <string name="fallacy_appeal_fear_name">Appeal to fear</string>
    <string name="fallacy_appeal_fear_description">Using fear instead of evidence.</string>
    <string name="fallacy_appeal_fear_example">If you do not support the policy, chaos will ensue.</string>
    <string name="fallacy_appeal_pity_name">Appeal to pity</string>
    <string name="fallacy_appeal_pity_description">Arguing by exploiting pity.</string>
    <string name="fallacy_appeal_pity_example">Approve the request because I worked hard on it.</string>
    <string name="fallacy_sunk_cost_name">Sunk cost</string>
    <string name="fallacy_sunk_cost_description">Continuing because resources were invested.</string>
    <string name="fallacy_sunk_cost_example">Keep funding the project; we've spent too much.</string>
    <string name="fallacy_false_balance_name">False balance</string>
    <string name="fallacy_false_balance_description">Giving equal weight to unequal claims.</string>
    <string name="fallacy_false_balance_example">Scientists vs. a blogger: both sides deserve airtime.</string>
    <string name="fallacy_personal_incredulity_name">Personal incredulity</string>
    <string name="fallacy_personal_incredulity_description">Dismissing something because it is hard to imagine.</string>
    <string name="fallacy_personal_incredulity_example">I can't understand quantum physics, so it must be wrong.</string>
    <string name="fallacy_appeal_novelty_name">Appeal to novelty</string>
    <string name="fallacy_appeal_novelty_description">Believing something is better because it is new.</string>
    <string name="fallacy_appeal_novelty_example">This method is modern, therefore superior.</string>
</resources>
