    <string name="fallacy_straw_man_name">Homme de paille</string>
    <string name="fallacy_straw_man_description">Déformer un argument pour le rendre plus facile à attaquer.</string>
    <string name="fallacy_straw_man_example">Tu veux une énergie plus propre, donc tu veux fermer toutes les usines.</string>
    <string name="fallacy_slippery_slope_name">Pente glissante</string>
    <string name="fallacy_slippery_slope_description">Supposer qu'une action mènera à une chaîne d'événements extrêmes.</string>
    <string name="fallacy_slippery_slope_example">Si l'on autorise les vélos en centre-ville, les voitures seront bientôt interdites.</string>
    <string name="fallacy_false_dilemma_name">Faux dilemme</string>
    <string name="fallacy_false_dilemma_description">Présenter seulement deux options alors qu'il en existe d'autres.</string>
    <string name="fallacy_false_dilemma_example">Tu es avec nous ou contre nous.</string>
    <string name="fallacy_circular_reasoning_name">Raisonnement circulaire</string>
    <string name="fallacy_circular_reasoning_description">La conclusion est répétée comme prémisse.</string>
    <string name="fallacy_circular_reasoning_example">Il est fiable parce qu'il ne ment jamais.</string>
    <string name="fallacy_hasty_generalization_name">Généralisation hâtive</string>
    <string name="fallacy_hasty_generalization_description">Tirer une conclusion à partir de trop peu de données.</string>
    <string name="fallacy_hasty_generalization_example">Deux ados étaient bruyants, donc tous les ados le sont.</string>
    <string name="fallacy_red_herring_name">Écran de fumée</string>
    <string name="fallacy_red_herring_description">Introduire une information hors sujet pour détourner.</string>
    <string name="fallacy_red_herring_example">Pourquoi se soucier de la pollution alors qu'il y a le chômage ?</string>
    <string name="fallacy_post_hoc_name">Post hoc</string>
    <string name="fallacy_post_hoc_description">Supposer une causalité parce qu'un événement suit un autre.</string>
    <string name="fallacy_post_hoc_example">J'ai porté un bracelet puis réussi l'examen ; le bracelet en est la cause.</string>
    <string name="fallacy_false_cause_name">Fausse cause</string>
    <string name="fallacy_false_cause_description">Attribuer une cause sans preuve.</string>
    <string name="fallacy_false_cause_example">La criminalité a augmenté après le nouveau maire, donc il en est responsable.</string>
    <string name="fallacy_appeal_ignorance_name">Appel à l'ignorance</string>
    <string name="fallacy_appeal_ignorance_description">Affirmer qu'une chose est vraie car elle n'a pas été réfutée.</string>
    <string name="fallacy_appeal_ignorance_example">Personne n'a prouvé que les extraterrestres n'existent pas, donc ils existent.</string>
    <string name="fallacy_cherry_picking_name">Cherry picking</string>
    <string name="fallacy_cherry_picking_description">Sélectionner les données qui confirment une position.</string>
    <string name="fallacy_cherry_picking_example">Ne citer que les journées chaudes pour nier le climat.</string>
    <string name="fallacy_equivocation_name">Équivoque</string>
    <string name="fallacy_equivocation_description">Utiliser un langage ambigu pour induire en erreur.</string>
    <string name="fallacy_equivocation_example">Les lois impliquent la légalité, donc enfreindre la loi est impossible.</string>
    <string name="fallacy_false_analogy_name">Fausse analogie</string>
    <string name="fallacy_false_analogy_description">Comparer des choses qui ne sont pas vraiment similaires.</string>
    <string name="fallacy_false_analogy_example">Les employés sont comme des clous : il faut taper dessus pour qu'ils travaillent.</string>
    <string name="fallacy_no_true_scotsman_name">Vrai écossais</string>
    <string name="fallacy_no_true_scotsman_description">Redéfinir un groupe pour écarter les contre-exemples.</string>
    <string name="fallacy_no_true_scotsman_example">Aucun vrai gamer n'aime pas ce jeu.</string>
    <string name="fallacy_gamblers_name">Pari du joueur</string>
    <string name="fallacy_gamblers_description">Croire que les événements passés changent les probabilités.</string>
    <string name="fallacy_gamblers_example">La pièce est tombée cinq fois sur face, donc pile va sortir.</string>
    <string name="fallacy_tu_quoque_name">Tu quoque</string>
    <string name="fallacy_tu_quoque_description">Rejeter une critique en soulignant l'hypocrisie.</string>
    <string name="fallacy_tu_quoque_example">Tu ne peux pas donner de conseils santé, tu as déjà mangé du fast-food.</string>
    <string name="fallacy_appeal_tradition_name">Appel à la tradition</string>
    <string name="fallacy_appeal_tradition_description">Affirmer qu'une chose est correcte car elle s'est toujours faite.</string>
    <string name="fallacy_appeal_tradition_example">Nous devons garder les formulaires papier parce que c'est la tradition.</string>
    <string name="fallacy_appeal_nature_name">Appel à la nature</string>
    <string name="fallacy_appeal_nature_description">Supposer que ce qui est naturel est meilleur.</string>
    <string name="fallacy_appeal_nature_example">Les remèdes naturels sont toujours plus sûrs.</string>
    <string name="fallacy_middle_ground_name">Juste milieu</string>
    <string name="fallacy_middle_ground_description">Supposer que le compromis entre deux extrêmes est vrai.</string>
    <string name="fallacy_middle_ground_example">La vérité est au milieu entre un mensonge et la réalité.</string>
    <string name="fallacy_loaded_question_name">Question orientée</string>
    <string name="fallacy_loaded_question_description">Poser une question avec une présupposition.</string>
    <string name="fallacy_loaded_question_example">Quand as-tu arrêté de gaspiller des ressources ?</string>
    <string name="fallacy_composition_name">Sophisme de composition</string>
    <string name="fallacy_composition_description">Supposer que ce qui est vrai des parties l'est du tout.</string>
    <string name="fallacy_composition_example">Chaque composant est léger, donc la machine est légère.</string>
    <string name="fallacy_division_name">Sophisme de division</string>
    <string name="fallacy_division_description">Supposer que ce qui est vrai du tout s'applique aux parties.</string>
    <string name="fallacy_division_example">L'entreprise est riche, donc chaque employé est riche.</string>
    <string name="fallacy_appeal_fear_name">Appel à la peur</string>
    <string name="fallacy_appeal_fear_description">Utiliser la peur à la place des preuves.</string>
    <string name="fallacy_appeal_fear_example">Si tu ne soutiens pas cette politique, ce sera le chaos.</string>
    <string name="fallacy_appeal_pity_name">Appel à la pitié</string>
    <string name="fallacy_appeal_pity_description">Argumenter en exploitant la pitié.</string>
    <string name="fallacy_appeal_pity_example">Approuve la demande parce que j'ai beaucoup travaillé dessus.</string>
    <string name="fallacy_sunk_cost_name">Coûts irrécupérables</string>
    <string name="fallacy_sunk_cost_description">Continuer parce que des ressources ont déjà été investies.</string>
    <string name="fallacy_sunk_cost_example">Continuons de financer le projet, on a déjà trop dépensé.</string>
    <string name="fallacy_false_balance_name">Faux équilibre</string>
    <string name="fallacy_false_balance_description">Donner le même poids à des affirmations inégales.</string>
    <string name="fallacy_false_balance_example">Les scientifiques et un blogueur méritent le même temps d'antenne.</string>
    <string name="fallacy_personal_incredulity_name">Incrédulité personnelle</string>
    <string name="fallacy_personal_incredulity_description">Rejeter quelque chose parce qu'on a du mal à l'imaginer.</string>
    <string name="fallacy_personal_incredulity_example">Je ne comprends pas la physique quantique, donc c'est faux.</string>
    <string name="fallacy_appeal_novelty_name">Appel à la nouveauté</string>
    <string name="fallacy_appeal_novelty_description">Croire qu'une chose est meilleure parce qu'elle est nouvelle.</string>
    <string name="fallacy_appeal_novelty_example">Cette méthode est moderne, elle est donc supérieure.</string>
